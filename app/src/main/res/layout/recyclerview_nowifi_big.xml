<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:textSize="50sp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginBottom="30sp"
        android:layout_width="match_parent"
        android:text="点击下方图片进行重试！"
        android:layout_height="wrap_content"
        android:textColor="@color/default_font_hint"/>

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="288pt"
        android:layout_height="288sp"
        android:layout_gravity="center"
        android:src="@mipmap/nowifiicon"
        android:id="@+id/recyclerview_refreshbtn"/>

    <TextView
        android:textSize="50sp"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginTop="30sp"
        android:text="网络发生异常了哟！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/default_font_gray"/>
</LinearLayout>