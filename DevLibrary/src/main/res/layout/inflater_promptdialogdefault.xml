<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/shape_dialogdefaultwhiteroundbg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4mm"
    android:paddingRight="4mm"
    android:paddingLeft="4mm"
    android:paddingTop="4mm">

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/promptdialog_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="6dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:textSize="16dp"/>

    <View
        android:layout_width="match_parent"
        android:background="#FFDDDDDD"
        android:layout_height="1px"
        android:visibility="gone"/>

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/promptdialog_content"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:background="#FFFFFFFF"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:minHeight="88dp"
        android:paddingTop="8dp"
        android:textSize="14dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:background="#FFDDDDDD"
        android:layout_height="1px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/promptdialog_false"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:gravity="center"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/promptdialog_btnimg"
            android:layout_height="match_parent"
            android:background="#FFDDDDDD"
            android:layout_width="1px"/>

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/promptdialog_true"
            android:background="#FFFFFFFF"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:layout_width="0dp"
            android:paddingLeft="12dp"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:gravity="center"
            android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>